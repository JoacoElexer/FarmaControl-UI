<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FarmaControl_UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FarmaControl_UI"
    xmlns:views="clr-namespace:FarmaControl_UI.Views"
    Title="FarmaControl_UI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent Route="UsuariosPage" ContentTemplate="{DataTemplate views:UsuariosPage}" />
    <ShellContent Route="ProductosPage" ContentTemplate="{DataTemplate views:ProductosPage}" />
    <ShellContent Route="ProveedoresPage" ContentTemplate="{DataTemplate views:ProveedoresPage}" />
    <ShellContent Route="ComprasPage" ContentTemplate="{DataTemplate views:ComprasPage}" />
    <ShellContent Route="VentasPage" ContentTemplate="{DataTemplate views:VentasPage}" />
    <ShellContent Route="ReportesPage" ContentTemplate="{DataTemplate views:ReportesPage}" />

</Shell>
