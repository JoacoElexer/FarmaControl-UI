<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarmaControl_App.Views.UserModule"
             xmlns:viewmodels="clr-namespace:FarmaControl_App.ViewModels" 
             xmlns:models="clr-namespace:FarmaControl_App.Models"
             BackgroundColor="Transparent">
    
    
    <ContentView.BindingContext>
        <viewmodels:UserViewModel />
    </ContentView.BindingContext>

    <Frame
     Background="#2B2B33"
     CornerRadius="15"
     Padding="20"
     HasShadow="True"
     HorizontalOptions="FillAndExpand"
     VerticalOptions="FillAndExpand">
        <VerticalStackLayout Spacing="15" Padding="20">
            <Border StrokeShape="RoundRectangle 25"
                 Stroke="#CCCCCC"
                 BackgroundColor="White"
                 Padding="10">
                <Grid ColumnDefinitions="*,Auto">
                    <Entry Grid.Column="0"
                    Placeholder="Buscar"
                    PlaceholderColor="#888888"
                    TextColor="Black"
                    FontSize="16"
                    VerticalOptions="Center"
                    Keyboard="Text"
                    ClearButtonVisibility="WhileEditing"
                    Margin="0,0,10,0"
                    Text="{Binding SearchText}"/>
                    <ImageButton Grid.Column="1"
                          Source="{FontImageSource Glyph=&#xF002;, FontFamily=FontAwesomeSolid, Color=Black}"
                          HeightRequest="24"
                          WidthRequest="24"
                          VerticalOptions="Center"
                          HorizontalOptions="End"/>
                </Grid>
            </Border>

            <Label Text="Usuarios"
            FontSize="32"
            FontAttributes="Bold"
            TextColor="White"
            Margin="0,10,0,0"/>

            <Grid ColumnDefinitions="50,*,*,*,*"  Padding="0,10,0,5"
           BackgroundColor="Transparent">
                <Label Grid.Column="1" Text="Nombre" TextColor="White" FontSize="16" HorizontalOptions="Start" Margin="0,0,0,0"/>
                <Label Grid.Column="2" Text="Usuario" TextColor="White" FontSize="16" HorizontalOptions="Start" Margin="0,0,0,0"/>
                <Label Grid.Column="3" Text="Rol" TextColor="White" FontSize="16" HorizontalOptions="Start" Margin="0,0,0,0"/>
                <Label Grid.Column="4" Text="Email" TextColor="White" FontSize="16" HorizontalOptions="Start" Margin="0,0,0,0"/>
            </Grid>

            <CollectionView ItemsSource="{Binding Users}"
                     SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:User">
                        <Frame HasShadow="False"
                        CornerRadius="10"
                        Padding="10"
                        Margin="0,5,0,5"
                        BackgroundColor="Transparent">
                            <Grid ColumnDefinitions="Auto,*,*,*,*">
                                <Image Grid.Column="0"
                                Source="{FontImageSource Glyph=&#xF2BD;, FontFamily=FontAwesomeSolid, Color=White}"
                                HeightRequest="40"
                                WidthRequest="40"
                                VerticalOptions="Center"
                                Margin="0,0,10,0"/>
                                <Label Grid.Column="1" Text="{Binding Name}" TextColor="White" FontSize="16" VerticalOptions="Center"/>
                                <Label Grid.Column="2" Text="{Binding Username}" TextColor="White" FontSize="16" VerticalOptions="Center"/>
                                <Label Grid.Column="3" Text="{Binding Role}" TextColor="White" FontSize="16" VerticalOptions="Center"/>
                                <Label Grid.Column="4" Text="{Binding Email}" TextColor="White" FontSize="16" VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </Frame>
</ContentView>
