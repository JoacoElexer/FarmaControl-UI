<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarmaControl_UI.Views.AdminModule">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- IMPORTANTE -->
            <!-- Insertar codigo para interfaz apegandose al diseño de figma -->
            
            
            <Label Text="Panel del Administrador"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10" />

            <!-- Botón: Usuarios -->
            <Button Text="Gestión de Usuarios"
                    Command="{Binding IrAUsuariosCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10" />

            <!-- Botón: Productos -->
            <Button Text="Gestión de Productos"
                    Command="{Binding IrAProductosCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="10" />

            <!-- Botón: Proveedores -->
            <Button Text="Gestión de Proveedores"
                    Command="{Binding IrAProveedoresCommand}"
                    BackgroundColor="#FF9800"
                    TextColor="White"
                    CornerRadius="10" />

            <!-- Botón: Compras -->
            <Button Text="Gestión de Compras"
                    Command="{Binding IrAComprasCommand}"
                    BackgroundColor="#9C27B0"
                    TextColor="White"
                    CornerRadius="10" />

            <!-- Botón: Ventas -->
            <Button Text="Gestión de Ventas"
                    Command="{Binding IrAVentasCommand}"
                    BackgroundColor="#E91E63"
                    TextColor="White"
                    CornerRadius="10" />

            <!-- Botón: Reportes -->
            <Button Text="Ver Reportes"
                    Command="{Binding IrAReportesCommand}"
                    BackgroundColor="#607D8B"
                    TextColor="White"
                    CornerRadius="10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentView>
