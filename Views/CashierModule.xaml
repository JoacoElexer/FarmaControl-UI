<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarmaControl_App.Views.CashierModule">

    <ContentView.Resources>
        <ResourceDictionary>
            <Style x:Key="CardBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="#FF2B2B33" /> <Setter Property="StrokeShape">
                    <Setter.Value>
                        <RoundRectangle CornerRadius="10" />
                    </Setter.Value>
                </Setter>
                <Setter Property="StrokeThickness" Value="0" />
                <Setter Property="Padding" Value="15,18,15,18" />
                <Setter Property="Margin" Value="0,5,0,5" /> <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="Black" Offset="5,5" Radius="10" Opacity="0.2" />
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="CardTextStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style x:Key="EntryTextStyle" TargetType="Entry">
                <Setter Property="PlaceholderColor" Value="#AAAAAA" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="16" />
            </Style>

            <Style x:Key="CardButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#3867D6" /> <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="10,15" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#808080" /> <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="10,15" />
                <Setter Property="Margin" Value="0,5,0,5" />
            </Style>

            <Style x:Key="SectionHeaderStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="22" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="Margin" Value="0,15,0,10" />
            </Style>

            <Style x:Key="SummaryLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>

            <Style x:Key="SummaryValueStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="End" />
            </Style>

        </ResourceDictionary>
    </ContentView.Resources>

    <VerticalStackLayout Padding="20" Spacing="8"> <Border Style="{StaticResource CardBorderStyle}">
            <VerticalStackLayout Spacing="10">
                <Label Text="Buscar Producto:" Style="{StaticResource CardTextStyle}" HorizontalOptions="Start"/>

                <Border BackgroundColor="#3A3A42" Padding="10">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry x:Name="ProductSearchEntry" Placeholder="Código o Nombre del Producto" Style="{StaticResource EntryTextStyle}"/>
                </Border>

                <Button Text="Añadir al Carrito" Style="{StaticResource CardButtonStyle}" Clicked="OnAddProductToCartClicked" />
            </VerticalStackLayout>
        </Border>

        <Border Style="{StaticResource CardBorderStyle}">
            <VerticalStackLayout Spacing="10">
                <Label Text="Carrito de Compras" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,10"/>

                <Label Text="[Lista de productos en el carrito]" TextColor="#AAAAAA" FontAttributes="Italic" HorizontalOptions="Center" Margin="0,0,0,20"/>

                <Grid ColumnDefinitions="*, Auto" Margin="0,10,0,0">
                    <Label Grid.Column="0" Text="Subtotal:" Style="{StaticResource SummaryLabelStyle}"/>
                    <Label Grid.Column="1" Text="$0.00" Style="{StaticResource SummaryValueStyle}"/>
                </Grid>
                <Grid ColumnDefinitions="*, Auto" Margin="0,5,0,0">
                    <Label Grid.Column="0" Text="Impuestos:" Style="{StaticResource SummaryLabelStyle}"/>
                    <Label Grid.Column="1" Text="$0.00" Style="{StaticResource SummaryValueStyle}"/>
                </Grid>
                <Grid ColumnDefinitions="*, Auto" Margin="0,15,0,0">
                    <Label Grid.Column="0" Text="TOTAL:" Style="{StaticResource SummaryLabelStyle}" FontAttributes="Bold" FontSize="20"/>
                    <Label Grid.Column="1" Text="$0.00" Style="{StaticResource SummaryValueStyle}" FontAttributes="Bold" FontSize="20"/>
                </Grid>

                <Button Text="Vaciar Carrito" Style="{StaticResource SecondaryButtonStyle}" Clicked="OnClearCartClicked" Margin="0,20,0,0"/>
                <Button Text="Finalizar Venta" Style="{StaticResource CardButtonStyle}" Clicked="OnCheckoutClicked" />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentView>