<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarmaControl_UI.Views.LoginModule">
    <Grid>
            <Frame
Background="#2B2B33"
CornerRadius="15"
Padding="20"
WidthRequest="370"
VerticalOptions="Center"
HorizontalOptions="Center"
HasShadow="True">
                <VerticalStackLayout>
                    <Label Text="Inicia Sesión" VerticalOptions="Center" HorizontalOptions="Start" FontSize="24"/>
                    <Label Text="Email" VerticalOptions="Center" HorizontalOptions="Center" FontSize="14"/>
                    <Entry Placeholder="Ingresa tu Correo Electronico"/>
                    <Label Text="Contraseña" VerticalOptions="Center" HorizontalOptions="Center" FontSize="14"/>
                    <Entry Placeholder="Ingresa tu Contraseña" IsPassword="True"/>
                    <Button Text="Acceder"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
</ContentView>
